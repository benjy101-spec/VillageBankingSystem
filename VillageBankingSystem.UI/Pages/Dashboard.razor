@page "/dashboard"
@using MudBlazor
@using MudBlazor.Charts
@using Microsoft.AspNetCore.Components

<MudPaper Class="pa-6" Elevation="8" Style="border-radius: 12px; max-width: 1200px; margin-left: auto; margin-right: auto;">
<MudText Typo="Typo.h4" GutterBottom="true" Style="color: #1f5c79;">Dashboard</MudText>

    <MudGrid Class="mb-4" Style="gap: 16px; max-width: 1200px; margin-left: auto; margin-right: auto;" Justify="Justify.Center">
        <MudItem xs="14" sm="4" md="3" lg="3" xl="3">
            <MudPaper Class="pa-3 d-flex flex-column align-items-center" Elevation="12" Style="background: linear-gradient(135deg, #42a5f5 0%, #478ed1 100%); border-radius: 16px; min-height: 140px; box-shadow: 0 4px 20px rgba(66, 165, 245, 0.6);">
                <MudIcon Icon="@Icons.Material.Filled.Group" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                <MudText Typo="Typo.subtitle1" Class="mb-2" Style="color: white; text-align: center; max-width: 300px;">Total Members</MudText>
                <MudText Typo="Typo.h4" Style="color: white; text-align: center; max-width: 300px;">@TotalMembers</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="14" sm="4" md="3" lg="3" xl="3">
            <MudPaper Class="pa-3 d-flex flex-column align-items-center" Elevation="12" Style="background: linear-gradient(135deg, #66bb6a 0%, #4caf50 100%); border-radius: 16px; min-height: 140px; box-shadow: 0 4px 20px rgba(102, 187, 106, 0.6);">
                <MudIcon Icon="@Icons.Material.Filled.Savings" Size="Size.Large" Class="mb-2" Style="color: white;" />
                <MudText Typo="Typo.subtitle1" Class="mb-2" Style="color: white; text-align: center; max-width: 300px;">Total Savings</MudText>
                <MudText Typo="Typo.h4" Style="color: white; text-align: center; max-width: 300px;">@TotalSavings</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="14" sm="4" md="3" lg="3" xl="3">
            <MudPaper Class="pa-3 d-flex flex-column align-items-center" Elevation="12" Style="background: linear-gradient(135deg, #ffb74d 0%, #ffa726 100%); border-radius: 16px; min-height: 140px; box-shadow: 0 4px 20px rgba(255, 183, 77, 0.6);">
                <MudIcon Icon="@Icons.Material.Filled.Money" Size="Size.Large" Class="mb-2" Style="color: white;" />
                <MudText Typo="Typo.subtitle1" Class="mb-2" Style="color: white; text-align: center; max-width: 300px;">Total Loans</MudText>
                <MudText Typo="Typo.h4" Style="color: white; text-align: center; max-width: 300px;">@TotalLoans</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudCard Class="mt-4" Style="border-radius: 12px; box-shadow: 0 8px 16px rgba(0,0,0,0.15);">
        <MudCardHeader>
            <MudText Typo="Typo.h6"  Style="color: #1f5c79;">Financial Overview</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudChart ChartType="ChartType.Line"
                      series="_chartSeries"
                      labels="_labels"
                      Height="400" />
        </MudCardContent>
    </MudCard>

    <MudGrid Class="mt-4" Spacing="3">
        <MudItem xs="12" sm="6">
            <MudCard Style="border-radius: 12px; box-shadow: 0 8px 16px rgba(0,0,0,0.15);">
                <MudCardHeader>
                    <MudText Typo="Typo.h6"  Style="color: #1f5c79;">Loan Distribution</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudChart ChartType="ChartType.Pie"
                              series="_loanDistributionSeries"
                              labels="_loanDistributionLabels"
                              Height="400" />
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudCard Style="border-radius: 12px; box-shadow: 0 8px 16px rgba(0,0,0,0.15);">
                <MudCardHeader>
                    <MudText Typo="Typo.h6"  Style="color: #1f5c79;">Monthly Repayments</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudChart ChartType="ChartType.Bar"
                              series="_monthlyRepaymentSeries"
                              labels="_monthlyRepaymentLabels"
                              Height="400" />
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudPaper>
