{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run Blazor WebAssembly",
      "type": "shell",
      "command": "dotnet run --project VillageBankingSystem.UI/VillageBankingSystem.UI.csproj",
      "problemMatcher": {
        "owner": "csharp",
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(CS\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        ]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
